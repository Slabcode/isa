<%= stylesheet_link_tag 'admins', media: 'all', type:"text/css" %>

<section class="main">	
	<div class="login">
		<div class="logo">
			<%= image_tag "logo_isa.png", :class => "logo img-responsive" %>
		</div>

		<h2 class="title"><%= t("devise.shared.links.sign_in")%></h2>
		
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<div class="field">
			<%= f.email_field :email, placeholder: :email ,autofocus: true %>
		</div>

		<div class="field">
			<%= f.password_field :password, placeholder: :password, autocomplete: "off" %>
		</div>

		<% if devise_mapping.rememberable? -%>
		<div class="field remember">
			<%= f.check_box :remember_me %>
			<%= f.label :remember_me %>
		</div>
		<% end -%>

		<div class="actions">
			<%= f.submit t("devise.sessions.new.sign_in")  %>
		</div>
		<% end %>

		<%= render "admins/shared/links" %>
	</div>
</section>