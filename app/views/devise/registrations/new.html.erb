<%= stylesheet_link_tag 'users', media: 'all', type:"text/css" %>

<section class="main">
	<div class="registration">
		<div class="logo">
			<%= image_tag "logo_isa.png", :class => "logo img-responsive" %>
		</div>
		<h2 class="title"> <%= t("devise.registrations.new.sign_up") %></h2>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= devise_error_messages! %>
		
		<div class="form-group row">
			<div class="field col-md-6">
				<%= f.text_field :name, placeholder: :name, autofocus: true %>
			</div>

			<div class="field col-md-6">
				<%= f.text_field :lastname , placeholder: :lastname %>
			</div>
		</div>
		<div class="field">
			<%= f.email_field :email, placeholder: :email %>
		</div>
		<div class="form-group bottom normal row">
			<div class="field col-md-6">
				<%= f.text_field :username, placeholder: :username %>
			</div>
			<div class="field col-md-6">
				<%= f.text_field :mobile, placeholder: :mobile %>
			</div>
		</div>

		<div class="form-group bottom row">
			<div class="field col-md-8 image clearfix">
				<%= f.label :image %>
				<%= f.file_field :image %>
			</div>
			<div class="field col-md-4">
				<%= f.select( :role, User.roles.keys, {:include_blank => false}, {:class=>"form-control"} )%>
			</div>
		</div>

		<div class="form-group row">
			<div class="field col-md-6">
				<%= f.password_field :password, placeholder: "Password (6 characters minimum)", autocomplete: "off" %>
			</div>
			<div class="field col-md-6">
				<%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off" %>
			</div>
		</div>

		<div class="actions">
			<%= f.submit t("devise.registrations.new.sign_up") %>
		</div>
		<% end %>

	</div>
</section>
